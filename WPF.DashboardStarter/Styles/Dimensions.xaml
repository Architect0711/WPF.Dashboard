<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPF.DashboardStarter.Styles">
    
    <Style TargetType="FrameworkElement" x:Key="ImageSquare">
        <Setter Property="Height" Value="35" />
        <Setter Property="Width" Value="35" />
    </Style>

    <Style TargetType="FrameworkElement" x:Key="BaseSquare">
        <Setter Property="Height" Value="50" />
        <Setter Property="Width" Value="50" />
    </Style>

    <Style TargetType="FrameworkElement" x:Key="BaseHeight">
        <Setter Property="Height" Value="50" />
    </Style>

    <Style TargetType="FrameworkElement" x:Key="BaseWidth">
        <Setter Property="Width" Value="50" />
    </Style>

    <Style TargetType="Grid" x:Key="SecondSidebarGrid">
        <Setter Property="Margin" Value="0,0,249,0" />
    </Style>

    <Style TargetType="{x:Type RowDefinition}" x:Key="RowHeight" >
        <Setter Property="Height" Value="50" />
    </Style>

    <Style TargetType="{x:Type ColumnDefinition}" x:Key="ColumnWidth" >
        <Setter Property="Width" Value="50" />
    </Style>
    
</ResourceDictionary>